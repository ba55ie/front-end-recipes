{
  "name": "rollup-itscss",
  "version": "1.0.0",
  "description": "Bundle JS files with Rollup and compile SCSS to css",
  "private": true,
  "scripts": {
    "prebuild": "run-p clean lint",
    "build": "cross-env NODE_ENV=production run-p build:*",
    "build:styles": "sass --source-map --style=compressed source/styles:dist/css",
    "build:scripts": "rollup --config",
    "clean": "npx rimraf dist/*",
    "dev": "run-p watch serve",
    "lint": "run-p lint:*",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint source/styles/**",
    "serve": "browser-sync start --server --no-open --files 'index.html, dist'",
    "watch": "run-p watch:*",
    "watch:styles": "npm run build:styles -- --watch",
    "watch:scripts": "npm run build:scripts -- --watch"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/polyfill": "7.2.5",
    "@babel/preset-env": "7.2.3",
    "browser-sync": "2.26.3",
    "cross-env": "5.2.0",
    "dom4": "2.1.4",
    "eslint": "5.6.1",
    "eslint-config-vi": "9.2.0",
    "npm-run-all": "4.1.5",
    "rollup": "1.1.0",
    "rollup-plugin-babel": "4.2.0",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-terser": "4.0.2",
    "sass": "1.15.3",
    "stylelint": "9.6.0",
    "stylelint-config-vi": "1.4.2"
  }
}
